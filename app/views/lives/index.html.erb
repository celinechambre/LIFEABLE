<div class="container" style="margin-top: 20px;">
  <h1 class="text-center">Find the life you always wanted!</h1>
    <div class="d-flex flex-row justify-content-around row row-cols-1 row-cols-md-3">
      <% @lives.each do |life| %>
        <div class="col-md-6" style="padding: 10px;">
          <div class="card text-center">
            <%= image_tag("https://source.unsplash.com/random", alt:"image", width: 20, height: 300, crop: :fit, class: "card-img-top") %>
            <div class="card-body">
              <h5 class="card-title">
                <%= life.title %>
              </h5>
              <p>
                <%= life.description %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
</div>
