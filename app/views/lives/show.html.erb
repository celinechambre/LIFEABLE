<div class="life-show">
  <div class="img-show">
    <% if @life.photo.attached? %>
      <%= cl_image_tag @life.photo.key, :transformation=>{:width=>1200, :height=>500, :crop=>"fill"} %>
    <% else %>
      <%= image_tag("https://source.unsplash.com/random", alt:"image", crop: :fill, height: 500, class: "card-img-top rounded") %>
    <% end %>
  </div>

  <h1><%= @life.title %></h1>

  <div class=description>
	   <p><%= @life.description %></p>
  </div>
  
  <div class="life-details">
    <p>Things you should know:
      <ul>
        <li><p><strong>Job:</strong> <%= @life.job.to_s.capitalize %></p></li>
        <li><p><strong>Lifestyle:</strong> <%= @life.lifestyle.to_s.capitalize  %></p></li>
        <li><p><strong>City:</strong> <%= @life.city.to_s.capitalize %></p></li>
      </ul>
    </p>
    </div>
  <%= link_to "Book me", new_life_booking_path(@life), class: "book-life" %>
  <%= link_to "Back to list", lives_path, class: "back-to-list" %>
</div>
