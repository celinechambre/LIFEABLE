<div class="d-flex flex-row justify-content-around row row-cols-md-2 position-relative">
  <% @lives.each do |life| %>
    <div class="col-md-6 border-0">
      <div class="pos-relative card bg-light text-white"  style="margin-top: 20px; margin-bottom: 50px;">
          <%# if life.photo.attached? %>
            <%#= cl_image_tag life.photo.key, height: 300, crop: :scale %>
          <%# else %>
            <%= image_tag("https://source.unsplash.com/random", alt:"image", height: 300, crop: :fit) %>
          <% end %>
          <% if policy(life).edit? %>
            <div class="btn-group position-absolute" role="group">
              <button id="btnGroupDrop1" type="button" class="btn btn-outline-secondary dropdown-toggle no-border" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-cog"></i>
              </button>
              <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                <%= link_to "🔨 Edit", edit_life_path(life), class: "dropdown-item"%>
                <%= link_to "❌ Delete", life_path(life), method: :delete, class:"dropdown-item"%>
              </div>
            </div>
          <% end %>
        <div class="transparency card-img-overlay bg-primary text-light col-md-6">
          <h2 class="card-title font-weight-bold">
            <%= life.title.titleize %>
          </h2>
          <p class="card-text">
            💸 <%= life.job %>
          </p>
          <p class="card-text">
            🔮 <%= life.lifestyle %>
          </p>
          <p class="card-text">
            📍 <%= life.city %>
          </p>
          <p class="card-text font-weight-lighter">
            created by <%= life.user.first_name.capitalize %>
          </p>
        </div>
        <%= link_to "Details", life_path(life), class:"pos-absolute btn btn-danger btn-md rounded-lg chakra-font-button white-text" %>
      </div>
    </div>
  <% end %>
</div>
